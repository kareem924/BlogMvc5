@model BlogMvc5.Models.Candidate
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-@ViewBag.Status">
    <div class="panel-heading">
        @ViewBag.Message
    </div>
</div>
<fieldset>
    <legend>Apply</legend>
    <div>
        @using (@Html.BeginForm("Apply", "Jobs", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table class="table">
                <tr>
                    <td>Email</td>
                    <td>@Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Email)
                    </td>
                
                </tr>
                <tr>
                    <td>Job Title</td>
                    <td>@Html.DropDownList("JobTitle")</td>
                </tr>
                <tr>
                    <td>CV</td>
                    <td><input type="file" name="Cv" value="" class="form-control" /></td>
                </tr>
            </table>
            <input type="submit" value="Apply" class="btn btn-success" />
        }
    </div>
</fieldset>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $('#JobTitle').addClass('form-control');
    });
</script>